@model IEnumerable<eShop.Models.CreditNote>
@{
    Layout = null;
}

@(Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add(model => Html.CheckBox(model.Id.ToString(), new { id = model.Id.ToString(), value = model.Id.ToString() })).Titled(Html.CheckBox("CheckAll"));
        columns.Add(model => ((User.IsInRole("CreditNotesEdit")) ? "<div class=\"text-center\"><a class=\"btn btn-success btn-xs\" href=\"" + @Url.Action("Edit", "CreditNotes", new { id = model.Id }) + "\"><i class=\"fa fa-edit\"></i> Edit</a>" : "") +
        ((User.IsInRole("CreditNotesView")) ? "&nbsp;<a class=\"btn btn-primary btn-xs view-data\" href=\"" + @Url.Action("Details", "CreditNotes", new { id = model.Id }) + "\"><i class=\"fa fa-eye\"></i> View</a>" : "") +
        ((User.IsInRole("CreditNotesPrint")) ? "&nbsp;<a target=\"_blank\" class=\"btn btn-info btn-xs print-data\" href=\"" + @Url.Action("Print", "CreditNotes", new { id = model.Id }) + "\"><i class=\"fa fa-print\"></i> Print</a>" : "")).Encoded(false);
        columns.Add(model => model.User.UserName).Titled("User");
        columns.Add(model => model.MasterBusinessUnit.Code).Titled(@Html.DisplayNameFor(model => model.MasterBusinessUnit.Code));
        columns.Add(model => model.MasterRegion.Code).Titled(@Html.DisplayNameFor(model => model.MasterRegion.Code));
        columns.Add(model => model.Date).Titled(@Html.DisplayNameFor(model => model.Date)).Formatted("{0:d}");
        columns.Add(model => model.Total).Titled(@Html.DisplayNameFor(model => model.Total)).Formatted("{0:N0}");
        columns.Add(model => model.Code).Titled(@Html.DisplayNameFor(model => model.Code));
        columns.Add(model => model.Notes).Titled(@Html.DisplayNameFor(model => model.Notes));
        columns.Add(model => model.Active).Titled(@Html.DisplayNameFor(model => model.Active)).RenderedAs(model => model.Active == true ? "&#x2713;" : "&#x2717;").Encoded(false);
        columns.Add(model => model.Created).Titled(@Html.DisplayNameFor(model => model.Created)).Sortable(true);
        columns.Add(model => model.Updated).Titled(@Html.DisplayNameFor(model => model.Updated)).Sortable(true).InitialSort(GridSortOrder.Desc);
    })
    .RowAttributed(model => new { @class = model.Active == true ? "" : "grid-column-red" })
    .Empty("Tidak ada data.")
    .Pageable(pager =>
    {
        pager.PageSizes = new Dictionary<Int32, String> { { 0, "All" }, { 10, "10" }, { 100, "100" } };
        pager.ShowPageSizes = true;
        pager.PagesToDisplay = 5;
        pager.CurrentPage = 1;
        pager.RowsPerPage = 10;
    })
    .UsingFilterMode(GridFilterMode.Row)
    .Filterable()
    .Sortable()
    .AppendCss("tablegrid-hover table-striped fix-table")
    .Id("data-table")
)