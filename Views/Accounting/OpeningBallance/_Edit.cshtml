@model eShop.Models.AccountBallance

@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title">Master Kontainer</h4>
        </div>
        <div class="modal-body">
            <div id="divEmp">
                @using (Ajax.BeginForm("Edit", "OpeningBallance", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "divEmp", OnSuccess = "EditSuccess" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.ChartOfAccountId)
                    @Html.HiddenFor(model => model.Month)
                    @Html.HiddenFor(model => model.Year)

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.BeginningBallance)
                                @Html.EditorFor(model => model.BeginningBallance, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.BeginningBallance, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-12 text-right">
                                <input type="submit" value="Save" class="btn btn-primary" style="margin-top:10px" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>