<div class="content-wrapper">
    <section class="content-header-fixed">
        <h1 class="col-md-6">
            Aktiva
        </h1>
        <div class="col-md-6 text-right">
            @if (User.IsInRole("FixedAssetsAdd"))
            {
                <button id="btnAdd" class="btn btn-success mx-1" href="@Url.Action("Create", "FixedAssets")">
                    <i class="fa fa-plus"></i> Add
                </button>
            }
            @if (User.IsInRole("FixedAssetsDelete"))
            {
                <button id="batchDelete" class="btn btn-danger mx-1">
                    <i class="fa fa-trash"></i> Delete
                </button>
            }
        </div>
    </section>

    <!-- Main content -->
    <section class="content" style="margin-top:30px;">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-body" style="overflow:auto; white-space: nowrap">
                        @Html.AjaxGrid(Url.Action("IndexGrid"), new { id = "data-table" })
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
    </section>
</div>
