@model eShop.Models.Cheque
@using eShop.Models;

@{
    Layout = null;
}

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-body">
            <section class="content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <i class="fa fa-plus"></i>
                                <h3 class="box-title">Details - Giro / Cek Keluar</h3>
                            </div>
                            <!-- /.box-header -->
                            <div class="box-body">
                                <form>

                                    <div class="form-horizontal">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="form-group">
                                            <div class="col-md-6">
                                                @Html.LabelFor(model => model.Code)
                                                @Html.TextBoxFor(model => model.Code, new { disabled = "disabled", @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="col-md-6">
                                                @Html.LabelFor(model => model.MasterBusinessUnit.Name)
                                                @Html.TextBoxFor(model => model.MasterBusinessUnit.Name, new { disabled = "disabled", @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.MasterBusinessUnit.Name, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-6">
                                                @Html.LabelFor(model => model.Date)
                                                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { disabled = "disabled", @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="col-md-6">
                                                @Html.LabelFor(model => model.DueDate)
                                                @Html.EditorFor(model => model.DueDate, new { htmlAttributes = new { disabled = "disabled", @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.DueDate, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-6">
                                                @Html.LabelFor(model => model.Issued)
                                                @Html.TextBoxFor(model => model.Issued, new { disabled = "disabled", @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Issued, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="col-md-6">
                                                @Html.LabelFor(model => model.Ammount)
                                                @Html.TextBoxFor(model => model.Ammount, new { disabled = "disabled", @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Ammount, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-6">
                                                @Html.LabelFor(model => model.OnBehalf)
                                                @Html.TextBoxFor(model => model.OnBehalf, new { disabled = "disabled", @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.OnBehalf, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="col-md-6">
                                                @Html.LabelFor(model => model.AccNumber)
                                                @Html.TextBoxFor(model => model.AccNumber, new { disabled = "disabled", @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.AccNumber, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-12">
                                                @Html.LabelFor(model => model.Notes)
                                                @Html.EditorFor(model => model.Notes, new { htmlAttributes = new { disabled = "disabled", @class = "form-control", @style = "text-transform:uppercase" } })
                                                @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-4">
                                                @Html.LabelFor(model => model.Created)
                                                @Html.EditorFor(model => model.Created, new { htmlAttributes = new { disabled = "disabled", @class = "form-control", @style = "text-transform:uppercase" } })
                                                @Html.ValidationMessageFor(model => model.Created, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="col-md-4">
                                                @Html.LabelFor(model => model.Updated)
                                                @Html.EditorFor(model => model.Updated, new { htmlAttributes = new { disabled = "disabled", @class = "form-control", @style = "text-transform:uppercase" } })
                                                @Html.ValidationMessageFor(model => model.Updated, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="col-md-4">
                                                @Html.LabelFor(model => model.User.UserName)
                                                @Html.EditorFor(model => model.User.UserName, new { htmlAttributes = new { disabled = "disabled", @class = "form-control", @style = "text-transform:uppercase" } })
                                                @Html.ValidationMessageFor(model => model.User.UserName, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                </form>
                            </div>
                            <!-- /.box-body -->
                        </div>
                        <!-- /.box -->
                    </div>
                    <!-- /.col -->
                    <div class="col-md-12 text-center">
                        <button type="button" class="btn btn-danger btn-block btn-lg" data-dismiss="modal">
                            Close
                        </button>
                    </div>
                    <!-- /.col -->
                </div>
            </section>
        </div>
    </div>
</div>

