@model eShop.Models.MasterBank

@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title">Details - Master Kas / Bank</h4>
        </div>
        <div class="modal-body">
            <div id="divEmp">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id)

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.Code)
                            @Html.TextBoxFor(model => model.Code, new { disabled = "disabled", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-4">
                            @Html.LabelFor(model => model.Type)
                            @Html.TextBoxFor(model => model.Type, new { disabled = "disabled", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-2 text-center">
                            @Html.LabelFor(model => model.Active)
                            <div class="checkbox text-center">
                                @Html.CheckBoxFor(model => model.Active)
                                @Html.CheckBoxFor(model => model.Active, new { disabled = "disabled" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.MasterBusinessUnitId)
                            @Html.TextBoxFor(model => model.MasterBusinessUnit.Name, new { disabled = "disabled", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MasterBusinessUnitId, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.MasterRegionId)
                            @Html.TextBoxFor(model => model.MasterRegion.Notes, new { disabled = "disabled", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MasterRegionId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.Name)
                            @Html.TextBoxFor(model => model.Name, new { disabled = "disabled", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.OnBehalf)
                            @Html.TextBoxFor(model => model.OnBehalf, new { disabled = "disabled", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.OnBehalf, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.AccNumber)
                            @Html.TextBoxFor(model => model.AccNumber, new { disabled = "disabled", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.AccNumber, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.ChartOfAccountId)
                            @Html.TextBoxFor(model => model.ChartOfAccountId, new { disabled = "disabled", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ChartOfAccountId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.Notes)
                            @Html.TextBoxFor(model => model.Notes, new { disabled = "disabled", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4">
                            @Html.LabelFor(model => model.Created)
                            @Html.EditorFor(model => model.Created, new { htmlAttributes = new { disabled = "disabled", @class = "form-control", @style = "text-transform:uppercase" } })
                            @Html.ValidationMessageFor(model => model.Created, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-4">
                            @Html.LabelFor(model => model.Updated)
                            @Html.EditorFor(model => model.Updated, new { htmlAttributes = new { disabled = "disabled", @class = "form-control", @style = "text-transform:uppercase" } })
                            @Html.ValidationMessageFor(model => model.Updated, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-4">
                            @Html.LabelFor(model => model.User.UserName)
                            @Html.EditorFor(model => model.User.UserName, new { htmlAttributes = new { disabled = "disabled", @class = "form-control", @style = "text-transform:uppercase" } })
                            @Html.ValidationMessageFor(model => model.User.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="text-right">
                        <button type="button" class="btn btn-danger btn-block btn-lg" data-dismiss="modal">
                            Close
                        </button>
                    </div>
                </div>
                    </div>               
            </div>
        </div>
    </div>
