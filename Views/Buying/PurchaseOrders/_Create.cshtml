@model eShop.Models.PurchaseOrder
@using eShop.Models;

@{
    Layout = null;
}


<style>
    hr {
        border: 1px solid black; /* Atur warna garis dan ketebalan */
        margin: 20px 0; /* Atur jarak atas dan bawah dari teks di sekitarnya */
    }
</style>



<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title">Add - Purchase Order</h4>
        </div>
        <div class="modal-body">
            <div id="divEmp">
                @using (Ajax.BeginForm("Create", "PurchaseOrders", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "divEmp", OnSuccess = "CreateSuccess" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.Code)
                                @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @style = "text-transform:uppercase" } })
                                @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-6">
                                @Html.LabelFor(model => model.Tanggal, new { @class = "control-label" })
                                @Html.EditorFor(model => model.Tanggal, new { htmlAttributes = new { @class = "form-control", @style = "text-transform:uppercase" } })
                                @Html.ValidationMessageFor(model => model.Tanggal, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.MasterSupplierId)
                                @Html.DatalistFor(model => model.MasterSupplierId, new MasterSupplierDatalist { Url = "/DatalistFilters/AllMasterSupplier" })
                                @Html.ValidationMessageFor(model => model.MasterSupplierId, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.Notes)
                                @Html.EditorFor(model => model.Notes, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <hr>
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="col-md-6 text-left">
                                    <a href="#" id="cancel" class="btn btn-danger" style="margin-top:10px">
                                        Batal
                                    </a>
                                </div>
                                <div class="col-md-6 text-right">
                                    <input type="submit" value="Simpan" class="btn btn-primary" style="margin-top:10px" />
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
