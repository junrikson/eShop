
@{
    ViewBag.Title = "Home";
}
<!-- main image slider container -->
<section class="slide-window">
    <div class="slide-wrapper" style="width:300%;">
        <div class="slide">
            <div class="slide-caption text-center">
            </div>
        </div>
        <div class="slide slide2">
            <div class="slide-caption text-center">
            </div>
        </div>
        <div class="slide slide3">
            <div class="slide-caption text-center">
            </div>
        </div>
    </div>
    <div class="slide-controller">
        <div class="slide-control-left">
            <div class="slide-control-line"></div>
            <div class="slide-control-line"></div>
        </div>
        <div class="slide-control-right">
            <div class="slide-control-line"></div>
            <div class="slide-control-line"></div>
        </div>
    </div>
</section>
<!-- end of main image slider container -->

<div class="modal fade" id="myModal" role="dialog" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h4 class="modal-title">@ViewBag.WarningTittle</h4>
                <hr/>
                <div class="alert alert-danger">
                    <p style="text-align: justify" id="notifications">@ViewBag.WarningBody</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!--/Login-->
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
    <div id="loginContainer">
    </div>
</div>
<!--//Login-->
<!--/Register-->
<div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
    <div id="registerContainer">
    </div>
</div>
<!--//Register-->
<!--/ForgotPassword-->
<div class="modal fade" id="forgotPasswordModal" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
    <div id="forgotPasswordContainer">
    </div>
</div>
<!--//ForgotPassword-->
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/unobtrusive")


    <script>
        $(window).on('load', function ()
        {
            if (document.getElementById('notifications').innerHTML !== "")
            {
                $('#myModal').modal('show');
            }
        });

        $('#SignIn').click(function (event)
        {
            event.preventDefault();
            var url = $(this).attr("href");
            $.get(url, function (data)
            {
                $('#loginContainer').html(data);
                $('#loginModal').modal('show');

                $('form').each(function ()
                {
                    var $el = $(this);
                    $el.data('validator', null);
                    $.validator.unobtrusive.parse($el);
                })
            });
        });

        $('#Register').click(function (event)
        {
            event.preventDefault();
            var url = $(this).attr("href");
            $.get(url, function (data)
            {
                $('#registerContainer').html(data);
                $('#registerModal').modal('show');

                $('form').each(function ()
                {
                    var $el = $(this);
                    $el.data('validator', null);
                    $.validator.unobtrusive.parse($el);
                })
            });
        });

        $('#ForgotPassword').click(function (event)
        {
            event.preventDefault();
            var url = $(this).attr("href");
            $.get(url, function (data)
            {
                $('#forgotPasswordContainer').html(data);
                $('#forgotPasswordModal').modal('show');

                $('form').each(function ()
                {
                    var $el = $(this);
                    $el.data('validator', null);
                    $.validator.unobtrusive.parse($el);
                })
            });
        });
    </script>
}