<!-- header -->
<div class="header-top">
    <header>
        <div class="top-head ml-lg-auto text-center">
            <div class="row mr-0">
                <div class="col-md-3 sign-btn">
                    <a href="@Url.Action("LoginPartial", "Account")" id="SignIn">
                        <i class="fas fa-lock"></i> Login
                    </a>
                </div>
                <div class="col-md-3 sign-btn">
                    <a href="@Url.Action("RegisterPartial", "Account")" id="Register">
                        <i class="fas fa-user"></i> Register
                    </a>
                </div>
                <div class="col-md-4 sign-btn">
                    <a href="@Url.Action("ForgotPasswordPartial", "Account")" id="ForgotPassword">
                        <i class="fas fa-key"></i> Password
                    </a>
                </div>
                <div class="search col-md-2">
                    <div class="mobile-nav-button">
                        <button id="trigger-overlay" type="button">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                    <!-- open/close -->
                    <div class="overlay overlay-door">
                        <button type="button" class="overlay-close">
                            <i class="fa fa-times" aria-hidden="true"></i>
                        </button>
                        <form action="#" method="post" class="d-flex">
                            <input class="form-control" type="search" placeholder="Masukkan nomor resi..." required="">
                            <button type="submit" class="btn btn-primary submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </form>
                    </div>
                    <!-- open/close -->
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="logo">
                <h1>
                    <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                        eShop System
                    </a>
                </h1>
            </div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon">
                    <i class="fas fa-bars"></i>
                </span>

            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-lg-auto text-center">
                    <li class="nav-item @((ViewBag.Title == "Home") ? "active" : "")">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">
                            Home
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item @((ViewBag.Title == "About") ? "active" : "")">
                        <a class="nav-link" href="@Url.Action("About", "Home")">About Us</a>
                    </li>
                    <li class="nav-item @((ViewBag.Title == "Contact") ? "active" : "")">
                        <a class="nav-link" href="@Url.Action("Contact", "Home")">Contact</a>
                    </li>
                </ul>

            </div>
        </nav>
    </header>
</div>
<!-- header -->