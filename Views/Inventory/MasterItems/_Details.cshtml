@model eShop.Models.MasterItem

@{
    Layout = null;
}

<div class="modal-dialog modal-xl">
    <div class="modal-content">
        <div class="modal-body">
            <section class="content">
                <div class="row">
                    <div class="col-md-4">
                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <i class="fa fa-plus"></i>

                                <h3 class="box-title">Details - Barang</h3>
                            </div>
                            <!-- /.box-header -->
                            <div class="box-body">
                                <form>
                                    <div class="form-horizontal">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="form-group">
                                            <div class="col-md-12">
                                                @Html.LabelFor(model => model.Code)
                                                @Html.TextBoxFor(model => model.Code, new { disabled = "disabled", @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-12">
                                                @Html.LabelFor(model => model.MasterCategory.Name)
                                                @Html.TextBoxFor(model => model.MasterCategory.Name, new { disabled = "disabled", @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.MasterCategory.Name, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-12">
                                                @Html.LabelFor(model => model.MasterBrand.Name)
                                                @Html.TextBoxFor(model => model.MasterBrand.Name, new { disabled = "disabled", @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.MasterBrand.Name, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-12">
                                                @Html.LabelFor(model => model.MasterSupplier.Name)
                                                @Html.TextBoxFor(model => model.MasterSupplier.Name, new { disabled = "disabled", @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.MasterSupplier.Name, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                @Html.LabelFor(model => model.Name)
                                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { disabled = "disabled", @class = "form-control", @style = "text-transform:uppercase" } })
                                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="col-md-2 text-center">
                                                @Html.LabelFor(model => model.Active)
                                                <div class="checkbox text-center">
                                                    @Html.CheckBoxFor(model => model.Active, new { disabled = "disabled" })
                                                    @Html.ValidationMessageFor(model => model.Active, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-12">
                                                @Html.LabelFor(model => model.Notes)
                                                @Html.EditorFor(model => model.Notes, new { htmlAttributes = new { disabled = "disabled", @class = "form-control", @style = "text-transform:uppercase" } })
                                                @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <!-- /.box-body -->
                        </div>
                        <!-- /.box -->
                    </div>
                    <!-- /.col -->

                    <div class="col-md-8">
                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <div class="col-md-2">
                                    <i class="fa fa-info"></i>

                                    <h3 class="box-title">Details</h3>
                                </div>
                            </div>
                            <!-- /.box-header -->
                            <div class="box-body" style="overflow:auto; white-space: nowrap" id="DetailsViewGrid">
                                @Html.AjaxGrid(Url.Action("ViewGrid", routeValues: new { Id = Html.ValueFor(model => model.Id) }), new { id = "view-table" })
                            </div>
                            <!-- /.box-body -->
                        </div>
                        <!-- /.box -->
                    </div>
                    <div class="col-md-12 text-center">
                        <button type="button" class="btn btn-danger btn-block btn-lg" data-dismiss="modal">
                            Close
                        </button>
                    </div>
                    <!-- /.col -->
                </div>
            </section>
        </div>
    </div>
</div>

