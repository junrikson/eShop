@model eShop.Models.ChangeCurrency

@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title">Mata Uang</h4>
        </div>
        <div class="modal-body">
            @Html.Partial("MvcDatalist/_Dialog")
            <div id="divEmp">
                @using (Ajax.BeginForm("ChangeCurrency", "ProductionBillOfMaterials", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "divEmp", OnSuccess = "ChangeCurrencySuccess" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)
                        <div class="form-group">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.MasterCurrencyId)
                                @Html.DatalistFor(model => model.MasterCurrencyId, new eShop.Models.MasterCurrencyDatalist(), new { @class = "datalist2" })
                                @Html.ValidationMessageFor(model => model.MasterCurrencyId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.Rate)
                                @Html.EditorFor(model => model.Rate, new { htmlAttributes = new { @class = "form-control total2" } })
                                @Html.ValidationMessageFor(model => model.Rate, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12 text-right">
                                <input type="submit" value="Save" class="btn btn-primary" style="margin-top:10px" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>