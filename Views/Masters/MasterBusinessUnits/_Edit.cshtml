                                        <a href="#" id="accountsBatchDelete" class="btn btn-danger mx-1">
                                            <i class="fa fa-trash"></i> Delete
                                        </a>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="box box-primary">
                                        <div class="box-body" style="overflow:auto; white-space: nowrap">
                                            @Html.AjaxGrid(Url.Action("AccountsGrid", routeValues: new { Id = Html.ValueFor(model => model.Id) }), new { id = "accounts-table" })
                                        </div>
                                        <!-- /.box-body -->
                                    </div>
                                </div>
                            </div>

