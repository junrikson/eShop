@model eShop.Models.MasterRegionAccountViewModel

@{
    Layout = null;
}

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title col-md-10">Bagan Akun - @Model.Code</h4>
        </div>
        <div class="modal-body">
            <form id="form" name="form" action="javascript:SaveAccounts();">
                <input type="hidden" id="Id" name="Id" value="@Model.Id">
                <div class="form-group">
                    <div class="col-md-4">
                        @Html.DatalistFor(model => model.ChartOfAccountStartId, new eShop.Models.ChartOfAccountDatalist())
                    </div>
                    <div class="col-md-1">
                        <label class="text-center" style="margin-top: 5px">s/d</label>
                    </div>
                    <div class="col-md-4">
                        @Html.DatalistFor(model => model.ChartOfAccountEndId, new eShop.Models.ChartOfAccountDatalist())
                    </div>
                    <div class="col-md-3 text-right">
                        <input type="submit" value="+ Add" class="btn btn-success" />
                        <a id="batchDeleteAccounts" class="btn btn-danger mx-1" href="#">
                            <i class="fa fa-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </form>

            <div class="box-body" style="overflow:auto; white-space: nowrap">
                @Html.AjaxGrid(Url.Action("AccountsGrid", "MasterRegions", new { masterRegionId = Model.Id }), new { id = "accounts-table" })
            </div>
        </div>
    </div>
</div>