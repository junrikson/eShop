@model eShop.Models.SalesRequest

@{
    ViewBag.Title = "Sales Request";
    ViewBag.Current = "SalesRequests";
}


<div class="modal-dialog modal-xl">
    <div class="modal-content">
        <div class="modal-body">
            <section class="content">
                <div class="row">
                    <div class="col-md-4">
                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <i class="fa fa-plus"></i>

                                <h3 class="box-title">Details - Sales Request</h3>
                            </div>

                            <div class="box-body">
                                <div class="form-horizontal">
                                    <div class="nav-tabs-custom">
                                        <ul class="nav nav-tabs">
                                            <li class="active"><a href="#tab_1" data-toggle="tab">General</a></li>
                                            <li><a href="#tab_2" data-toggle="tab">Other</a></li>

                                        </ul>
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="tab-content">
                                        <div class="tab-pane active form-horizontal" id="tab_1">
                                            <div class="form-group">
                                                <div class="col-md-12">
                                                    @Html.LabelFor(model => model.MasterBusinessUnitId)
                                                    @Html.TextBoxFor(model => model.MasterBusinessUnit.Name, new { disabled = "disabled", @class = "form-control", id = "combinedTextBoxBusinessUnit" })
                                                    @Html.ValidationMessageFor(model => model.MasterBusinessUnitId, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-md-12">
                                                    @Html.LabelFor(model => model.MasterRegionId)
                                                    @Html.TextBoxFor(model => model.MasterRegion.Code, new { disabled = "disabled", @class = "form-control", id = "combinedTextBoxRegion" })
                                                    @Html.ValidationMessageFor(model => model.MasterRegionId, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-md-12">
                                                    @Html.LabelFor(model => model.MasterWarehouseId)
                                                    @Html.TextBoxFor(model => model.MasterWarehouse.Code, new { disabled = "disabled", @class = "form-control", id = "combinedTextBoxWarehouse" })
                                                    @Html.ValidationMessageFor(model => model.MasterWarehouseId, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-md-10">
                                                    @Html.LabelFor(model => model.Code)
                                                    @Html.TextBoxFor(model => model.Code, new { disabled = "disabled", @class = "form-control" })
                                                    @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                                                </div>
                                                <div class="col-md-2 text-center">
                                                    @Html.LabelFor(model => model.Active)
                                                    <div class="checkbox text-center">
                                                        @Html.CheckBoxFor(model => model.Active)
                                                        @Html.CheckBoxFor(model => model.Active, new { disabled = "disabled" })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-md-12">
                                                    @Html.LabelFor(model => model.Date)
                                                    @Html.EditorFor(model => model.Date, new { htmlAttributes = new { disabled = "disabled", @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>


                                        <div class="tab-pane form-horizontal" id="tab_2">
                                            <div class="form-group">
                                                <div class="col-md-12">
                                                    @Html.LabelFor(model => model.MasterCustomerId)
                                                    @Html.TextBoxFor(model => model.MasterCustomer.Code, new { disabled = "disabled", @class = "form-control" })
                                                    @Html.ValidationMessageFor(model => model.MasterCustomerId, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-md-12">
                                                    @Html.LabelFor(model => model.MasterSalesPersonId)
                                                    @Html.TextBoxFor(model => model.MasterSalesPerson.Code, new { disabled = "disabled", @class = "form-control", id = "combinedTextBoxMasterSalesPerson" })
                                                    @Html.ValidationMessageFor(model => model.MasterSalesPersonId, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-md-12">
                                                    @Html.LabelFor(model => model.Notes)
                                                    @Html.TextBoxFor(model => model.Notes, new { disabled = "disabled", @class = "form-control" })
                                                    @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    </div>
                                </div>
                                    </div>
                        </div>
                    </div>


                    <div class="col-md-8">
                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <div class="col-md-2">
                                    <i class="fa fa-info"></i>

                                    <h3 class="box-title">Details</h3>
                                </div>
                                <div class="text-right col-md-10">
                                    <button id="btnChangeCurrency" class="btn btn-default mx-6" href="@Url.Action("ChangeCurrency", "SalesRequests")" disabled>
                                        @Model.MasterCurrency.Code : @Model.Rate.ToString("N2")
                                    </button>
                                    <label style="font-weight: bold">TOTAL :</label>
                                    <input type="text" id="Total" value="@Model.Total.ToString("N2")" disabled="disabled" style="text-align:right;" />
                                </div>
                            </div>
                            <!-- /.box-header -->
                            <div class="box-body" style="overflow:auto; white-space: nowrap">
                                @Html.AjaxGrid(Url.Action("ViewGrid", routeValues: new { Id = Html.ValueFor(model => model.Id) }), new { id = "view-table" })
                            </div>
                            <!-- /.box-body -->
                        </div>
                        <!-- /.box -->
                    </div>
                    <!-- /.col -->
                    <div class="col-md-12 text-center">
                        <button type="button" class="btn btn-danger btn-block btn-lg" data-dismiss="modal">
                            Close
                        </button>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>

<script>
    // Menggabungkan nilai Code dan Name saat halaman dimuat
    $(document).ready(function () {
        var codeValue = '@Model.MasterWarehouse.Code';
        var nameValue = '@Model.MasterWarehouse.Name';
        var combinedValue = codeValue + ' - ' + nameValue;

        // Mengatur nilai TextBox
        $('#combinedTextBoxWarehouse').val(combinedValue);
    });

        $(document).ready(function () {
        var codeValue = '@Model.MasterRegion.Code';
        var nameValue = '@Model.MasterRegion.Notes';
        var combinedValue = codeValue + ' - ' + nameValue;

        // Mengatur nilai TextBox
            $('#combinedTextBoxRegion').val(combinedValue);
        });

            $(document).ready(function () {
        var codeValue = '@Model.MasterBusinessUnit.Code';
        var nameValue = '@Model.MasterBusinessUnit.Name';
        var combinedValue = codeValue + ' - ' + nameValue;

        // Mengatur nilai TextBox
                $('#combinedTextBoxBusinessUnit').val(combinedValue);
            });

                     $(document).ready(function () {
    var codeValue = '@Model.MasterSalesPerson.Code';
    var nameValue = '@Model.MasterSalesPerson.Name';
    var combinedValue = codeValue + ' - ' + nameValue;

             $('#combinedTextBoxMasterSalesPerson').val(combinedValue);
    });
</script>